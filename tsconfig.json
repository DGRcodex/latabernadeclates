{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // You might want to change this to 'true' later for better code quality
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed to 'bundler' in the previous example, 'node' is often fine too
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- LÍNEAS AÑADIDAS ---
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./*"] 
    }
    // --- FIN LÍNEAS AÑADIDAS ---
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}